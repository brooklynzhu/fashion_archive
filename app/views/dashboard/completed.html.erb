

<div class="col-md-10">

<h2> Completed Pickups </h2>

	<% if @completed_pickups.empty? %>
		<p>All pickups are currently pending.</p>
	<% else %>

		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Date</th>
					<th>Pickup Number</th>
					<th>Client</th>
					<th>Number of Pieces</th>
				</tr>
			</thead>
			<tbody>
					
				<%@completed_pickups.each do |p|%>
					<tr>
						<td><%=link_to p.date.strftime("%m/%d/%Y"), p%></td>
						<td><%=p.id%></td>
						<td><%=p.client.name%></td>
						<td><%=p.piececount%></td>
					</tr>
				<%end%>
			</tbody>
		</table>
	<%end%>

<h2> Completed Deliveries </h2>
	<% if @completed_deliveries.empty? %>
			<p>All deliveries are currently pending.</p>
	<%else%>
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Date</th>
					<th>Delivery Number</th>
					<th>Client</th>
					<th>Number of Pieces</th>
				</tr>
			</thead>
			<tbody>	
				<%@completed_deliveries.each do |d|%>
					<tr>
						<td><%= link_to d.date.strftime("%m/%d/%Y"), d %></td>
						<td><%= d.id%></td>
						<td><%= d.client.name%></td>
						<td><%= d.piececount%></td>
					</tr>
				<%end%>	
			</tbody>
		</table>
	<%end%>

<br><%= link_to "Return to Dashboard", root_path %>


</div>


