<h2>Deliveries for <%=@client.name%></h2>

<div class="col-md-2">
</div>

<h3>Pending Deliveries</h3>

	<% if @pending_deliveries.empty? %>
		<p>There are currently no pending deliveries.</p>
	<%else%>

		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Date</th>
					<th>Delivery Number</th>
					<th>Client</th>
					<th>Number of Pieces</th>
				</tr>
			</thead>
			<tbody>
					
				<%@pending_deliveries.each do |d|%>
				<tr>
					<td><%= link_to d.date.strftime("%m/%d/%Y"), d %></td>
					<td><%= d.id%></td>
					<td><%= d.client.name%></td>
					<td><%= d.piececount%></td>
				</tr>
				<%end%>
					
			</tbody>
		</table>
	<%end%>

	<%=link_to "Return to Client Page", client_path(@client) %>

	</div>

	