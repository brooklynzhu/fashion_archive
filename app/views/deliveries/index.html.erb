<h2>Pending Deliveries for <%=@client.name%></h2>

<div class="col-md-2">
	<p><%=link_to "+ New Delivery Request", new_client_delivery_path(@client)%></p>
	<p><%=link_to "Completed Deliveries", completed_deliveries_client_deliveries_path(@client) %></p>

</div>

<div class="col-md-10">

		<% if @pending_deliveries.empty? %>
			<p>There are currently no pending deliveries.</p>
		<%else%>

			<br><table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>Date</th>
						<th>Delivery Number</th>
						<th>Client</th>
						<th>Number of Pieces</th>
					</tr>
				</thead>
				<tbody>
						
					<%@pending_deliveries.each do |d|%>
					<tr>
						<td><%= link_to d.date.strftime("%m/%d/%Y"), d %></td>
						<td><%= d.id%></td>
						<td><%= d.client.name%></td>
						<td><%= d.piececount%></td>
					</tr>
					<%end%>
						
				</tbody>
			</table></br>
		<%end%>

	<br><%=link_to "Return to Client Page", client_path(@client) %></br>
</div>



	