<h1> Completed Deliveries for <%=@client.name%> </h1>

<div class="col-md-2">
	<p><%=link_to "+ New Delivery", new_client_delivery_path(@client)%></p>
</div>

<div class="col-md-10">
	<% if @deliveries.empty? %>
			<p>All deliveries are currently pending.</p>
		<%else%>
			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>Date</th>
						<th>Delivery Number</th>
						<th>Client</th>
						<th>Number of Pieces</th>
					</tr>
				</thead>
				<tbody>	
					<%@deliveries.each do |d|%>
						<tr>
							<td><%= link_to d.date.strftime("%m/%d/%Y"), d %></td>
							<td><%= d.id%></td>
							<td><%= d.client.name%></td>
							<td><%= d.piececount%></td>
						</tr>
					<%end%>	
				</tbody>
			</table>
		<%end%>

<br><%=link_to "Return to Client Page", client_path(@client) %></br>
</div>


