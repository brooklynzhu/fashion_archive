<h2><%=@collection_manager.name%>'s Clients</h2>
<div class="col-md-2">
	<%=link_to "+ Add New Client", new_collection_manager_client_path(current_collection_manager)%>
</div>

<div class="col-md-10">

	<%if @clients.empty? %>
		<br><%= @collection_manager.name %> currently has no clients.</br>
	<%else%>
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Name</th>
					<th>Total Pieces</th>
				</tr>
			</thead>
			<tbody>
				<%@clients.each do |view|%>
					<tr>
						<td><%=link_to view.name, view%></td>
						<td><%=view.pieces.count%></td>
					</tr>
				<%end%>
			</tbody>
		</table>
	<%end%>
<br><%= link_to "Return to Dashboard", root_path %></br>

</div>



