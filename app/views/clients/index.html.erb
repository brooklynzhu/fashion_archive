<h2>View All Clients</h2>
<div class="col-md-2">
	<%=link_to "Add New Client", new_collection_manager_client_path(current_collection_manager)%>
</div>

<div class="col-md-10">

	<%if @clients.empty? %>
		<%= @collection_manager.name %> currently has no clients.
	<%else%>
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Name</th>
					<th>Total Pieces</th>
				</tr>
			</thead>
			<tbody>
				<%@clients.each do |view|%>
					<tr>
						<td><%=link_to view.name, view%></td>
						<td><%=view.pieces.count%></td>
					</tr>
				<%end%>
			</tbody>
		</table>
	<%end%>
</div>



