<h1> <%=@client.name%></h1>
<p>Total Piece Count: <%= @piece_count %>

<h3> Pieces On Site </h3>
    <%@pieces_on_site.each do |show|%>
    <ul class="all-pieces-grid">
      <li><%= link_to image_tag(show.photo), show %>
      <%=show.designer%>
      <%=show.id%></li>
    </ul>
  <%end%>
    


<p>Pieces at Client: <%= @pieces_at_client %></p>
<p><%=link_to "New Pickup", new_client_pickup_path(@client)%></p>
<p><%=link_to "New Delivery Request", new_client_delivery_path(@client)%></p>
<p><%=link_to "View Profile", client_profile_path(@client)%></p>

<p><%=link_to "Add New Piece", new_client_piece_path(@client)%></p>
<p><%=link_to "View All Pieces", client_pieces_path(@client)%></p>




