<h1> <%=@client.name%>'s Accessories: </h1>

<div class="col-md-2">
	<%= render "pieces_menu" %>
	

</div>


<div class="col-md-10">

	<% if @accessories.empty? %>
		There currently no accessories in <%=@client.name%>'s archive.
	<%else%>
	  	<%@accessories.each do |show|%>
			<ul class="all-pieces-grid">
		  		<li><%= link_to image_tag(show.photo), show %>
		  		Piece Number:<%=show.id%></br> <%=show.designer%> <br><%=show.location%></br>
				</li>
			</ul>
	  	<%end%>
	<%end%>

</div>

 <p><%=link_to "Return to Client", client_path(@client) %></p>
